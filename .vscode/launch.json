{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch via NPM",
      "request": "launch",
      "runtimeArgs": [
        "run-script",
        "start" // Changed from "debug" to "start" to match common practice, assuming your "start" script is the primary one. If you have a "debug" script in package.json, keep it as "debug".
      ],
      "runtimeExecutable": "npm",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    },
    {
      "name": "Python Debugger: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      "name": "Attach to Chrome",
      "port": 9222,
      "request": "attach",
      "type": "chrome",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch TradingView Snapshot Bot",
      "program": "${workspaceFolder}/bot.js", // <-- CORRECTED: Changed from index.js to bot.js
      "envFile": "${workspaceFolder}/.env",
      "env": {},
      "console": "integratedTerminal"
    }
  ]
}
